<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
  <Version>1.0.1</Version>
    <Authors>uPhoric Studios</Authors>
    <Summary>SVG Exporter Tool</Summary>
    <Description>
      A tool that exports SVGs into different image formats with different sizes. 
      It currently only exports to png format, more will be added if there is a demand.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Svg" Version="3.4.2" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

</Project>
